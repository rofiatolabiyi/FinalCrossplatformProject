<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossplatFinal.MainPage">

    <AbsoluteLayout>

        <!-- Score -->
        <Label x:Name="ScoreLabel"
               Text="Score: 0"
               TextColor="White"
               FontSize="22"
               AbsoluteLayout.LayoutBounds="0.5,0.05,200,50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Game Area -->
        <Grid x:Name="GameArea"
              ColumnDefinitions="*,*,*"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <!-- Lane backgrounds -->
            <BoxView Grid.Column="0" Color="#222" />
            <BoxView Grid.Column="1" Color="#1A1A1A" />
            <BoxView Grid.Column="2" Color="#222" />

            <!-- Player -->
            <BoxView x:Name="Player"
                     Grid.Column="1"
                     Color="DodgerBlue"
                     WidthRequest="45"
                     HeightRequest="45"
                     VerticalOptions="End"
                     Margin="0,0,0,30" />

            <!-- Obstacle -->
            <BoxView x:Name="Obstacle"
                     Color="Red"
                     WidthRequest="45"
                     HeightRequest="45"
                     VerticalOptions="Start" />

        </Grid>

    </AbsoluteLayout>
</ContentPage>