<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CrossplatFinal.MainPage"
             Title=""
             Shell.NavBarIsVisible="False">

    <AbsoluteLayout>

        <!-- background video -->
        <Image Source="road.png"
       Aspect="AspectFill"
       AbsoluteLayout.LayoutBounds="0,0,1,1"
       AbsoluteLayout.LayoutFlags="All" />



        <!-- GAME AREA -->
        <Grid x:Name="GameArea"
              IsVisible="False"
              ColumnDefinitions="*,*,*"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <Grid.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left"
                                        Threshold="40"
                                        Swiped="OnSwipeLeft"/>
                <SwipeGestureRecognizer Direction="Right"
                                        Threshold="40"
                                        Swiped="OnSwipeRight"/>
            </Grid.GestureRecognizers>

            <!-- Lanes (transparent overlays, so background video shows) -->
            <BoxView Grid.Column="0" Color="Transparent"/>
            <BoxView Grid.Column="1" Color="Transparent"/>
            <BoxView Grid.Column="2" Color="Transparent"/>

            <!-- Player -->
            <Image x:Name="Player"
                   Source="player.png"
                   WidthRequest="160"
                   HeightRequest="160"
                   VerticalOptions="End"
                   Margin="0,0,0,30" />

            <!-- Obstacle -->
            <Image x:Name="Obstacle"
                   Source="opponent.png"
                   WidthRequest="160"
                   HeightRequest="160"
                   VerticalOptions="Start"
                   Margin="0,0,0,30"/>

            <!-- Pickup -->
            <Image x:Name="Pickup"
                   Source="coin.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   VerticalOptions="Start"
                   IsVisible="False"
                   Margin="0,0,0,30"/>

        </Grid>

        <!-- START SCREEN -->
        <StackLayout x:Name="StartScreen"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Spacing="20"
                     AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                     AbsoluteLayout.LayoutFlags="PositionProportional">

            <Label Text="My Traffic Game"
                   FontSize="32"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Button Text="SETTINGS"
                    FontSize="20"
                    Padding="20"
                    Clicked="SettingsButton_Clicked"/>

            <Button Text="START"
                    FontSize="20"
                    Padding="20"
                    Clicked="StartButton_Clicked"/>
        </StackLayout>

        <!-- SCORE -->
        
        <Label x:Name="HighScoreLabel"
            Text="High Score: 0"
            TextColor="Pink"
            FontSize="22"
            AbsoluteLayout.LayoutBounds="0.5,0.10,250,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>

        
        <Label x:Name="ScoreLabel"
               Text="Score: 0"
               TextColor="Pink"
               FontSize="22"
               AbsoluteLayout.LayoutBounds="0.5,0.05,200,50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>
</ContentPage>
