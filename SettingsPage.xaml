<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossplatFinal.SettingsPage"
             Title="Settings">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="Settings" FontSize="28" />

        <HorizontalStackLayout Spacing="12">
            <Label Text="Sound" VerticalOptions="Center" />
            <Switch x:Name="SoundSwitch" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="12">
            <Label Text="Music" VerticalOptions="Center" />
            <Switch x:Name="MusicSwitch" />
        </HorizontalStackLayout>

        <Label Text="Difficulty" />
        <Picker x:Name="DifficultyPicker">
            <Picker.Items>
                <x:String>Easy</x:String>
                <x:String>Normal</x:String>
                <x:String>Hard</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Save" Clicked="Save_Clicked" />
        <Button Text="Back" Clicked="Back_Clicked" />

    </VerticalStackLayout>
</ContentPage>
