<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossplatFinal.SettingsPage"
             Title="Settings"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            <!-- Header -->
            <Label Text="Settings"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- ===== SOUND TOGGLE ===== -->
            <HorizontalStackLayout Spacing="12">
                <Label Text="Sound"
                       FontSize="18"
                       VerticalOptions="Center" />
                <Switch x:Name="SoundSwitch" />
            </HorizontalStackLayout>

            <!-- Sound Volume -->
            <Label Text="Sound Volume" FontSize="18"/>
            <Slider x:Name="SoundVolumeSlider"
                    Minimum="0"
                    Maximum="1"
                    Value="0.8"
                    ValueChanged="SoundVolumeSlider_ValueChanged"/>

            <Label x:Name="SoundVolumeValueLabel"
                   Text="80%"
                   FontSize="16"/>

            <!-- music toggle -->
            <HorizontalStackLayout Spacing="12">
                <Label Text="Music"
                       FontSize="18"
                       VerticalOptions="Center" />
                <Switch x:Name="MusicSwitch" />
            </HorizontalStackLayout>

            <!-- Music Volume -->
            <Label Text="Music Volume" FontSize="18"/>
            <Slider x:Name="MusicVolumeSlider"
                    Minimum="0"
                    Maximum="1"
                    Value="0.5"
                    ValueChanged="MusicVolumeSlider_ValueChanged"/>

            <Label x:Name="MusicVolumeValueLabel"
                   Text="50%"
                   FontSize="16"/>

            <!-- difficulty level]-->
            <Label Text="Difficulty"
                   FontSize="18" />

            <Picker x:Name="DifficultyPicker"
                    Title="Select difficulty">
                <Picker.Items>
                    <x:String>Easy</x:String>
                    <x:String>Normal</x:String>
                    <x:String>Hard</x:String>
                </Picker.Items>
            </Picker>

            
            <!-- ===== CHARACTER IMAGE ===== -->
            <Button Text="Change Character Image"
                    FontSize="18"
                    Clicked="ChangeCharacter_Clicked" />

            <!--choose between custom and 3 options button-->
            <HorizontalStackLayout Spacing="12">
                <Label Text="Use Custom Skin" VerticalOptions="Center" />
                <Switch x:Name="UseCustomSkinSwitch" />
            </HorizontalStackLayout>

            <!-- choosing from 3 cars-->
            <Label Text="Choose Your Car"
                FontSize="18"
                FontAttributes="Bold" />

            <Picker x:Name="CarPicker">
                <Picker.Items>
                    <x:String>Car 1</x:String>
                    <x:String>Car 2</x:String>
                    <x:String>Car 3</x:String>
                </Picker.Items>
            </Picker>

            <!-- ===== ACTION BUTTONS ===== -->
            <Button Text="Save"
                    FontSize="18"
                    Clicked="Save_Clicked" />

            <Button Text="Back"
                    FontSize="18"
                    Clicked="Back_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

